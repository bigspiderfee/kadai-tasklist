<% if logged_in? %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |t| %>
        <tr>
          <td><%= link_to t.id, t %></td>
          <td><%= t.status %></td>
          <td><%= t.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= paginate @tasks %>    
  </div>

  <%= link_to 'タスクリストを登録する', new_task_path, class: 'btn btn-primary' %>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklists</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
